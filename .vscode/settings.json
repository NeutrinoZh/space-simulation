{
    "files.exclude": {
        "**/.cache/": true,
        "CMakeUserPresets.json": true,
    },
    "clangd.checkUpdates": false,
    "clangd.arguments": [
        "--compile-commands-dir",
        "${workspaceFolder}/build/Release/"
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit"
    },
    "editor.formatOnSave": true,
    "editor.formatOnType": false
}